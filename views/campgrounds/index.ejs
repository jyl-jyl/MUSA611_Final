<% layout('layout/boilerplate') %>
<h1>All Campgrounds</h1>
<div>
	<a href="/campgrounds/new">Add New Campground</a>
</div>

<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="..." class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">Card title</h5>
        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      </div>
    </div>
  </div>
</div>





<% for (let campground of campgrounds) { %>
<div class="card" mb-3>
	<div class="row">
		<div class="col-md-4">
			<% if (campground.image.length) { %>
			<img class="card-img-left" alt="" src="<%= campground.image[0].url %>">

			<% } else { %>
			<img class="card-img-left" alt="" src="https://images.unsplash.com/photo-1507668339897-8a035aa9527d?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxjb2xsZWN0aW9uLXBhZ2V8Mnw0ODMyNTF8fGVufDB8fHx8&auto=format&fit=crop&w=800&q=60">

			<% } %>
		</div>
		<div class="col-md-8">
			<div class="card-body">
				<h5 class="card-title"><%= campground.title %></h5>
				<h5 class="card-title"><%= campground.description %></h5>
				<p>
					<small class="text-muted"><%= campground.location %></small>
				</p>
				<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View <%= campground.title %></a>

			</div>
		</div>
	</div>
</div>
<% } %>

